/**index.wxss**/

page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.userinfo {
    height: 120rpx;
    width: 100%;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
    color: #666;
}

.userinfo-avatar {
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx 40rpx;
    border-radius: 50%;
    background-size: cover;
}


/* test-bg */

.test-bg {
    width: 100%;
    height: 420rpx;
    background: #4CAD6A;
    position: relative;
}

.bg-image {
    width: 100%;
    height: 420rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.nav {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    height: 420rpx;
}

.btn-saosao,
.btn-detail {
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    flex: 1 1 50%;
    text-align: center;
}

.btn-saosao image,
.btn-detail image {
    display: block;
    width: 64rpx;
    height: 64rpx;
    margin: 0 auto;
}

.getDatas {
    width: 100%;
    position: relative;
    margin: 30rpx 0 0;
    background: #fff;
}

.infotxt {
    color: #666;
}

.msg-view {
    margin: 20rpx 30rpx;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.moban,
.beizhu {
    font-size: 28rpx;
}

.item {
    padding-bottom: 20rpx;
}

.num {
    color: #4CAD6A;
    display: inline-block;
}

.moban {
    padding: 20rpx 0;
}

.beizhu {
    color: #999;
    font-size: 26rpx;
}

.setmoban {
    padding: 20rpx 30rpx 40rpx;
    color: #4CAD6A;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.setmoban image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
}