.logo {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx 0;
    border-radius: 50%;
    background-size: cover;
    display: block;
    overflow: hidden;
}

.logo image {
    width: 100%;
    height: 100%;
}

page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.listinfo {
    padding: 20rpx 20rpx 100rpx;
    font-size: 24rpx;
}

.list {
    padding: 20rpx 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    margin: 0;
}

.datetime {
    padding-bottom: 10rpx;
    color: #666;
}

.remark {
    color: #333;
}

.h1 {
    color: #4CAD6A;
    font-size: 26rpx;
    background: #fff;
    padding: 20rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.icon-ls {
    width: 48rpx;
    height: 48rpx;
    padding-right: 8rpx;
}

.item {
    font-size: 26rpx;
    color: #666;
    padding: 10rpx 0;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.2)
}